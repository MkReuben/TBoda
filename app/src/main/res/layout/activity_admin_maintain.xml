<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boda.voi.taita.Admin.AdminMaintainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <ImageView
                android:id="@+id/bike_image_maintain"
                android:layout_width="290dp"
                android:layout_height="170dp"
                android:cropToPadding="false"
                android:layout_margin="18dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imageadd"
                android:layout_marginTop="10dp"
                android:contentDescription="maintain"

                />

            <EditText
                android:id="@+id/rider_name_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                android:hint="RIDER NAME"
                android:inputType="textMultiLine"
                android:padding="20dp"

                />

            <EditText
                android:id="@+id/rider_maintain_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="20dp"
                android:hint="RIDER DESCRIPTION"
                android:layout_marginLeft="45dp"
                android:padding="20dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"

                />
            <EditText
                android:id="@+id/rider_maintain_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="textMultiLine"
                android:layout_marginTop="20dp"
                android:hint="RIDER PHONE"
                android:layout_marginLeft="45dp"
                android:padding="20dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"

                />
            <EditText
                android:id="@+id/rider_maintain_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="20dp"
                android:hint="RIDER LOCATION"
                android:layout_marginLeft="45dp"
                android:padding="20dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <Button
                    android:id="@+id/rider_edit_btn"

                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:text="APPLY CHANGES"
                    android:textColor="#FFF"
                    android:background="@drawable/buttons"
                    android:padding="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/rider_delete_btn"

                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_marginTop="1dp"
                    android:text="DELETE RIDER"
                    android:textColor="#FFF"
                    android:background="@drawable/buttons"
                    android:padding="17dp"
                    android:layout_below="@+id/rider_edit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>