<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkOrange"
    tools:context="com.boda.voi.taita.Notification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"


        >

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_two_button"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:textColor="@android:color/white"
            android:text="Notify for new updates of the app"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_two_button"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:text="Notify for easy offline app to use"
            />
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_two_button"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:text="Notify for efficient services with our app"
            />
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_two_button"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Notify for we also offer courier services and delivery"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_two_button"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Notify for that the customers security is quaranteed"
            />
        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_two_button"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Notify for that the user share the app"
            />


    </LinearLayout>



</RelativeLayout>
