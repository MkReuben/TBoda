<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boda.voi.taita.Users.HomeActivity">


    <RelativeLayout
        android:id="@+id/r8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/riders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Riders"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:fontFamily="@font/blacklist"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_marginTop="1dp"
            />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_riders"
        android:layout_below="@+id/r8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:background="?android:attr/windowBackground"
        />
    <FrameLayout
        android:id="@+id/fragment_con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bottom_nav"
        />



</RelativeLayout>